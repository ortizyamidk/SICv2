<UserControl x:Class="WPF_LoginForm.CustomControls.cursosVencidos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LoginForm.CustomControls"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             Name="CursosVencidos">

    <Grid x:Name="grid" Margin="8 0">
        <Border CornerRadius="20" Padding="10" BorderBrush="#E41E1E" BorderThickness="1" Opacity="0.985">
            <Border.Background>
                <SolidColorBrush Color="#FFF89A8F" Opacity="0.8"/>
            </Border.Background>
            <Grid>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding ElementName=CursosVencidos, Path=Title}" TextWrapping="Wrap" Foreground="Black" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="5"/>
                    <TextBlock Text="{Binding ElementName=CursosVencidos, Path=Desc}" FontSize="15" Foreground="#8B052B" FontWeight="DemiBold" HorizontalAlignment="Left" Margin="15 0 0 0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</UserControl>
